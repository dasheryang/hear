<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/article_bg" android:scaleType="centerCrop"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp" android:background="#000000">
        <TextView android:layout_width="wrap_content"
                  android:textColor="#ffffff"
                  android:layout_height="wrap_content"
                  android:text="听见"
                  android:textSize="22dp" android:layout_centerInParent="true"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:visibility="gone"
                   android:src="@drawable/more_icon"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="10dp"
                />
    </RelativeLayout>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1">
        <android.support.v4.view.ViewPager
                android:visibility="gone"
                android:id="@+id/vp_pages"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        <TextView
                android:id="@+id/empty_btn"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="找不到文章，请点击重试"/>
    </FrameLayout>

    </LinearLayout>
</FrameLayout><!-- From: file:/Users/yang/Documents/d_proj/hear_app/android_proj/hearApp/src/main/res/layout/history.xml -->